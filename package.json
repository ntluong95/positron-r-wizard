{
  "name": "positron-r-wizard",
  "displayName": "%display.name%",
  "description": "%description%",
  "keywords": [
    "r",
    "pipe",
    "magrittr",
    "dplyr",
    "tidyverse",
    "rstudio",
    "vscode",
    "extension",
    "wizard",
    "positron"
  ],
  "version": "0.0.3",
  "publisher": "ntluong95",
  "repository": {
    "type": "git",
    "url": "https://github.com/ntluong95/positron-r-wizard.git"
  },
  "icon": "resources/icon-clean.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:r"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "positron-r-pipe-toggle.toggle",
        "title": "R Pipe",
        "when": "editorLangId == r && !config.positron.r.disablePipeUI",
        "actionBarOptions": {
          "controlType": "toggle",
          "leftTitle": "%>% pipe",
          "rightTitle": "|> pipe",
          "toggled": "config.positron.r.useNativePipe"
        }
      },
      {
        "command": "r.launchAddinPicker",
        "title": "Launch R Addin",
        "category": "R",
        "when": "editorLangId == r",
        "icon": "$(tools)",
        "actionBarOptions": {
          "controlType": "button",
          "displayTitle": true
        }
      },
      {
        "command": "positron-r-wizard.formatPipes",
        "title": "Format Pipes",
        "category": "R",
        "when": "editorLangId == r",
        "icon": "$(symbol-keyword)",
        "actionBarOptions": {
          "controlType": "button",
          "displayTitle": true
        }
      }
    ],
    "menus": {
      "editor/actions/right": [
        {
          "command": "positron-r-pipe-toggle.toggle",
          "when": "editorLangId == r && !config.positron.r.disablePipeUI",
          "group": "wz@1"
        },
        {
          "command": "positron-r-wizard.formatPipes",
          "when": "editorLangId == r && !config.positron.r.disablePipeUI",
          "group": "wz@3"
        }
      ],
      "editor/actions/left": [
        {
          "command": "r.launchAddinPicker",
          "when": "editorLangId == r",
          "group": "wz@2"
        }
      ]
    },
    "configuration": {
      "title": "Positron R Wizard",
      "properties": {
        "positron.r.pipe": {
          "type": "string",
          "default": "%>%",
          "description": "The R pipe operator to use. This setting is managed by the 'R Pipe' toggle.",
          "enum": [
            "%>%",
            "|>"
          ]
        },
        "positron.r.useNativePipe": {
          "type": "boolean",
          "default": false,
          "description": "Use native R pipe (|>) instead of magrittr pipe (%>%). This setting is synchronized with positron.r.pipe."
        },
        "positron.r.disablePipeUI": {
          "type": "boolean",
          "default": false,
          "description": "Disable the R Pipe toggle button in the editor action bar."
        },
        "positron-r-wizard.echoAddinCode": {
          "type": "boolean",
          "default": false,
          "description": "When enabled, addin invocation code will be printed to the R console before execution."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@posit-dev/positron": "^0.1.8",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^9.21.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "fs-extra": "^11.3.2"
  }
}
